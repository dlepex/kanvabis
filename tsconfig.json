{
	"compilerOptions": {
		"paths": {
			"*": [
				"types/*"
			]
		},
		"outDir": "build",
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictFunctionTypes": false,
		"module": "esnext",
		"moduleResolution": "classic",
		"target": "es6",
		"allowJs": true,
		"strictNullChecks": true,
		"lib": [
			"dom",
			"es2016",
			"es2017",
			"es2017.typedarrays",
			"es2015.iterable"
		],
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		],
		"baseUrl": "src",
	},
	"include": [
		"src/**/*"
	],
}
